<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Back Button and Title -->
    <TextView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        android:textColor="#BAA681"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/community_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티 내역"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#BAA681"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        android:layout_marginTop="16dp"/>

    <!-- Written Posts Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성한 게시글"
        android:textSize="18sp"
        android:textColor="#BAA681"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/community_title"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_container2"
        android:padding="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/community_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="오늘 경기 진짜..."
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공감"
            android:textColor="#BAA681"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조회수"
            android:textColor="#BAA681" />
    </LinearLayout>

    <!-- Written Comments Section -->
    <TextView
        android:id="@+id/written_comments_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성한 댓글"
        android:textSize="18sp"
        android:textColor="#BAA681"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Commented List -->
    <LinearLayout
        android:id="@+id/written_comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/written_comments_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 댓글 아이템 뷰를 추가할 수 있습니다 -->




    <!-- Individual comment item -->
        <!-- Individual comment item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_container"
            android:padding="8dp">

            <!-- First TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abcdefg"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"
                android:textColor="#000000" />

            <!-- Divider Line -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#BAA681"
                android:layout_marginEnd="16dp" />

            <!-- Second TextView -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="오늘 경기 진짜..."
                android:textColor="#BAA681"
                android:gravity="end" />

        </LinearLayout>


        <!-- Add more comments in similar structure if needed -->
    </LinearLayout>

    <!-- 공감한 게시글 타이틀 -->
    <TextView
        android:id="@+id/liked_posts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공감한 게시글"
        android:textSize="18sp"
        android:textColor="#BAA681"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/written_comment_list"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- 공감한 게시글 리스트 -->
    <LinearLayout
        android:id="@+id/liked_post_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_container2"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/liked_posts_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- Main TextView for the post content -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:text="~!@)*$@~...129"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Container for "공감" and "조회수" on the right side -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공감"
                android:textColor="#BAA681"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회수"
                android:textColor="#BAA681" />

        </LinearLayout>

    </LinearLayout>



    <!-- Participating Chat Rooms Section -->


    <!-- 참여하는 채팅방 Title -->
    <TextView
        android:id="@+id/participating_chatrooms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여하는 채팅방"
        android:textSize="18sp"
        android:textColor="#BAA681"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/liked_post_list"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <!-- 채팅방 아이템들 컨테이너 -->
    <LinearLayout
        android:id="@+id/chatroom_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/participating_chatrooms_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 채팅방 아이템 예시 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPL 리그\n회원 2,718명"
            android:textSize="14sp"
            android:textColor="#BAA681"
            android:background="@drawable/rounded_container2"
            android:padding="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네카라배 취준팟\n회원 842명"
            android:textSize="14sp"
            android:textColor="#BAA681"
            android:background="@drawable/rounded_container2"
            android:padding="8dp"/>
    </LinearLayout>


    <!-- Bottom Navigation Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#BAA681"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/check"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chat"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/check"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <ImageButton
        android:id="@+id/chat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mypage"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <ImageButton
        android:id="@+id/mypage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/mypage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>
