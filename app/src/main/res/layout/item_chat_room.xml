<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- 채팅방 이름 -->
    <TextView
        android:id="@+id/chatroom_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat Room Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 참여자 수 -->
    <TextView
        android:id="@+id/chatroom_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participants: 0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/chatroom_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 마지막 메시지 시간 -->
    <TextView
        android:id="@+id/chatroom_last_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 AM"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@+id/chatroom_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
