<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="35dp"
        android:layout_marginTop="84dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <!--android:drawableTop="@drawable/restaurant_icon"-->

        <ImageButton
            android:id="@+id/btngathering"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/mapgathering"
            android:scaleType="fitCenter"
            android:text="소모임" />

        <ImageButton
            android:id="@+id/btnRestaurant"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/maprestaurant"
            android:scaleType="fitCenter"
            android:text="식당" />
        <!--android:drawableTop="@drawable/cafe_icon"-->

        <ImageButton
            android:id="@+id/btnCafe"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/mapcafe"
            android:scaleType="fitCenter"
            android:text="카페" />
        <!--android:drawableTop="@drawable/convenience_icon"-->
        <ImageButton
            android:id="@+id/btnConvenience"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/mapconvenience"
            android:scaleType="fitCenter"
            android:text="편의점" />

        <!-- 추가 버튼들을 여기에 계속 추가할 수 있습니다 -->

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="118dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:text="소모임 만들기"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/meeting_write_title"
        android:layout_width="395dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="모임 이름"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />


    <EditText
        android:id="@+id/meeting_write_summary"
        android:layout_width="395dp"
        android:layout_height="43dp"
        android:layout_marginTop="132dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="(한줄소개)"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <ScrollView
        android:layout_width="383dp"
        android:layout_height="505dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meeting_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="188dp"
                android:text="7" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/making"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/making"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="만들기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>